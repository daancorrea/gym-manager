{% extends "layout.njk" %}
{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/3621148/00x300) no-repeat center center / cover"></section>
        <section class="details">

        <h3>Novo Instrutor</h3>

        <div class="item">

        <div>Avatar URL</div>
            <div><input type="url" name="avatar_url" placeholder="http://"></div>
        </div>   
        <div>Instrutor</div>
            <div><input type="text"name="name" placeholde="Nome do instrutor"></div>
        </div>

        <div class="item">
            <div>Data de Nascimento</div>
            <div><input type="date" name="birth"></div>
        </div>
        
        <div class="item">
            <div>Sexo</div>
            <div>
            <span><input type="radio" name="gender"value="m" checked>Masculino</span>
            <span><input type="radio" name="gender"value="f">Feminino</span></div>
        </div>
        <div class="item">

            <div>Área de Atuação</div>            
            <div><input type="text" name="service" placeholder="Separe os serviços prestados por virgula"></div>    
        </div>

        <button type="submit">Salvar</button>

        </section>
    </form>
{% endblock %}